<%= render 'shared/error_messages', model: @event%>
<div class="card">
  <div class="container">
    <br><br>
    <%= form_with model: @event, local: true do |f| %>
      <%= f.text_field :title, placeholder: 'イベントのタイトル'%>
      <br><br>
      <%= f.text_field :content, placeholder: 'イベントの内容'%>
      <br><br>
      <%= f.text_field :address, placeholder: '開催地'%>
      <br><br>
      <label for="day">
        <i class="material-icons">date_range</i>　開催日
        <%= f.text_field :day, id: 'day', class: 'datepicker' %>
      </label>
      <br><br>
      <div class="row">
        <div class="switch col s6 l6">
          <label>
            無料
            <%= f.check_box :paid%>
            <span class="lever"></span>
            有料
          </label>
        </div>
        <div class="col s6 l6">
          <%= f.number_field :price, placeholder: '有料の場合金額を入力' %>
        </div>
      </div>
      <label for="submit">
        <a class="waves-effect waves-light btn"><i class="material-icons right">send</i>開催</a>
        <%= f.submit id: 'submit', class: 'hide'%>
      </label>
      <br><br>
    <% end %>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script>
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
